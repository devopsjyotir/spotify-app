  "dependencies": {
    "axios": "^1.2.6",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "react": "^17.0.0",
    "react-dom": "^17.0.0"
  },
  "devDependencies": {
    "concurrently": "^7.6.0",
    "nodemon": "^2.0.20"
  }
